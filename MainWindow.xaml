<Window x:Class="StarsectorLTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StarsectorLTool"
        mc:Ignorable="d"
        Title="Starsector L.Tool" Height="400" Width="300" ResizeMode="NoResize">
    <Grid x:Name="MainGrid" Margin="0,0,-0.4,0.4">
        <Grid.Background>
            <ImageBrush ImageSource="Image/bg.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <Button x:Name="Apply" Content="应用" HorizontalAlignment="Center" Margin="106,302,105,0" VerticalAlignment="Top" Width="74" Height="34" Click="Apply_Click"/>
        <Image x:Name="image" HorizontalAlignment="Left" Height="29" Margin="0,341,0,0" VerticalAlignment="Bottom" Width="239" Source="Image/tripad_bot_left_decor_extended.png"/>
        <Grid x:Name="grid_NowSettingGrid" Margin="61,54,55,172">
            <Label x:Name="xmx_t" Content="最大内存：" HorizontalAlignment="Left" Margin="10,95,0,0" VerticalAlignment="Top" Width="74" Background="{x:Null}">
                <Label.Foreground>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF99FAFF" Offset="0"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </Label.Foreground>
            </Label>
            <Label x:Name="xms_t" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top" Width="74" Background="{x:Null}" ToolTip="一开始给Java分配的最小内存，即游戏开始就分配好的内存。" Height="30" Content="最小内存：">
                <Label.Foreground>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF99FAFF" Offset="0"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </Label.Foreground>
            </Label>
            <Label x:Name="lab_NowSetting" Content="当前设置" Margin="49,0" VerticalAlignment="Top" Width="80" Height="38" Foreground="#FF7AABFF" FontSize="16" HorizontalContentAlignment="Center"/>
        </Grid>
        <Label x:Name="lab_vmTips" Content="-未检测到vmparams-" HorizontalAlignment="Center" Margin="59,4,55,0" VerticalAlignment="Top" Height="37" Width="180" Background="{x:Null}" Foreground="Red" FontStyle="Italic" HorizontalContentAlignment="Center"/>

    </Grid>
</Window>
