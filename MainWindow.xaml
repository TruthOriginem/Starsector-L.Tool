<Window x:Class="StarsectorLTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StarsectorLTool"
        mc:Ignorable="d"
        Title="Starsector L.Tool" Height="400" Width="300" ResizeMode="NoResize" Icon="Image/ltool_icon.ico">
    <Grid x:Name="MainGrid" Margin="0,0,-0.4,0.4">
        <Grid.Background>
            <ImageBrush ImageSource="Image/bg.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <Button x:Name="Apply" Content="应用" HorizontalAlignment="Center" Margin="106,302,105,0" VerticalAlignment="Top" Width="74" Height="34" Click="Apply_Click"/>
        <Image x:Name="image" HorizontalAlignment="Left" Height="29" Margin="0,341,0,0" VerticalAlignment="Bottom" Width="239" Source="Image/tripad_bot_left_decor_extended.png"/>
        <Grid x:Name="grid_NowSettingGrid" Margin="55,30,55,183" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label x:Name="xmx_t" Content="最大内存：" HorizontalAlignment="Left" Margin="10,84,0,0" VerticalAlignment="Top" Width="74" Background="{x:Null}" ToolTip="默认1536mb。在游戏过程中可以分配给Java的最大内存。">
                <Label.Foreground>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF99FAFF" Offset="0"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </Label.Foreground>
            </Label>
            <Label x:Name="xms_t" HorizontalAlignment="Left" Margin="10,49,0,0" VerticalAlignment="Top" Width="74" Background="{x:Null}" ToolTip="默认1536mb。给Java分配的最小内存，即游戏开始就分配的内存。" Height="30" Content="最小内存：">
                <Label.Foreground>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF99FAFF" Offset="0"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </Label.Foreground>
            </Label>
            <Label x:Name="lab_NowSetting" Content="当前设置" Margin="49,0" VerticalAlignment="Top" Width="80" Height="38" Foreground="#FFD6E5FF" FontSize="16" HorizontalContentAlignment="Center" BorderBrush="White" Background="{x:Null}"/>
            <Label x:Name="xms_tn" HorizontalAlignment="Left" Margin="94,49,0,0" VerticalAlignment="Top" Width="74" Background="{x:Null}" Height="30" Content="1535mb">
                <Label.Foreground>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF99FAFF" Offset="0"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </Label.Foreground>
            </Label>
            <Label x:Name="xmx_tn" HorizontalAlignment="Left" Margin="94,84,0,0" VerticalAlignment="Top" Width="74" Background="{x:Null}" Height="30" Content="1535mb">
                <Label.Foreground>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF99FAFF" Offset="0"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </Label.Foreground>
            </Label>
        </Grid>
        <Label x:Name="lab_vmTips" Content="-未检测到vmparams-" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Top" Height="37" Width="290" Background="{x:Null}" Foreground="Red" FontStyle="Italic" HorizontalContentAlignment="Center"/>
        <Label x:Name="xmx_s" Content="设置最大内存：" HorizontalAlignment="Left" Margin="58,244,0,0" VerticalAlignment="Top" Width="96" Background="{x:Null}">
            <Label.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF99FAFF" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Label.Foreground>
        </Label>
        <Label x:Name="xms_s" HorizontalAlignment="Left" Margin="58,209,0,0" VerticalAlignment="Top" Width="96" Background="{x:Null}" Height="30" Content="设置最小内存：">
            <Label.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF99FAFF" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Label.Foreground>
        </Label>
        <ComboBox x:Name="co_xms" Margin="154,213,58,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="co_xmx" Margin="154,248,58,0" VerticalAlignment="Top"/>
        <Label x:Name="sign" Content="Originem" VerticalAlignment="Bottom" FontSize="9" Background="{x:Null}" Height="22" Width="53" HorizontalAlignment="Right" Margin="0,0,-2,0">
            <Label.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF9000FF" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Label.Foreground>
        </Label>

    </Grid>
</Window>
